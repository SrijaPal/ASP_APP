    <script>
        const topics = document.querySelectorAll('.topic');

        topics.forEach(topic => {
            topic.addEventListener('mouseenter', () => {
                // Set opacity of all sections except the current topic
                topics.forEach(otherTopic => {
                    if (otherTopic !== topic) {
                        otherTopic.style.opacity = '0.3'; // Fade out other topics
                    }
                });

                // Show content of current topic
                const content = document.querySelector(`#${topic.id}-content`);
                if (content) {
                    content.style.opacity = '1';
                }
            });

            topic.addEventListener('mouseleave', () => {
                // Reset opacity of all sections
                topics.forEach(otherTopic => {
                    otherTopic.style.opacity = '1'; // Reset opacity of other topics
                    const content = document.querySelector(`#${otherTopic.id}-content`);
                    if (content) {
                        content.style.opacity = '0.3'; // Fade out content of other topics
                    }
                });
            });
        });
    </script>
