    <div>
        <div class="chat-popup" id="chatPopup">
            <div class="chat-header"> Chat-AI
                <button onclick="toggleChatPopup()">Close</button>
            </div>
            <div class="chat-content" id="chatContent"></div>
            <div class="chat-input">
                <select id="questionSelect">
                    <option value="">Select a question...</option>
                    <option value="What is the current time?">What is the current time?</option>
                    <option value="What day is it today?">What day is it today?</option>
                    <option value="What is your name?">What is your name?</option>
                    <option value="How are you feeling today?">How are you feeling today?</option>
                    <option value="Where are RIL plants located in India?">Where are RIL plants located?</option>
                    <option value="Who is the founder?">Who is the founder?</option>
                    <option value="Which is the largest refinery of Reliance?">Which is the largest refinery of Reliance?</option>
                    <option value="Who is CEO of Reliance?">Who is CEO of Reliance?</option>


                </select>
                <button onclick="sendMessage()">Send</button>
            </div>
        </div>

        <img src="~/message-icon-512x463-tqzmxrt7.png" class="message-me-sign" onclick="toggleChatPopup()" alt="Message me">

        <style>
            /* Chat popup styling */
            .chat-popup {
                position: fixed;
                bottom: 20px;
                right: 20px;
                width: 300px;
                background-color: #f9f9f9;
                border: 1px solid #ccc;
                border-radius: 5px;
                box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.1);
                z-index: 9999;
                display: none;
            }

                .chat-popup.open {
                    display: block;
                }

            .chat-header {
                padding: 10px;
                border-bottom: 1px solid #ccc;
                background-color: #f1f1f1;
                text-align: right;
            }

            .chat-content {
                padding: 10px;
                max-height: 200px;
                overflow-y: auto;
            }

            .chat-input {
                padding: 10px;
                border-top: 1px solid #ccc;
                background-color: #fff;
            }

            /* Message me sign styling */
            .message-me-sign {
                position: fixed;
                bottom: 10px;
                right: 10px;
                background-color: #007bff;
                color: #fff;
                border: none;
                border-radius: 50%;
                width: 60px;
                height: 60px;
                font-size: 24px;
                text-align: center;
                cursor: pointer;
                z-index: 9999;
            }
        </style>

        <script>
            function toggleChatPopup() {
                var chatPopup = document.getElementById("chatPopup");
                chatPopup.classList.toggle("open");
            }

            function sendMessage() {
                var selectedQuestion = document.getElementById("questionSelect").value;
                var chatContent = document.getElementById("chatContent");

                if (!selectedQuestion) {
                    alert("Please select a question.");
                    return;
                }

                // Append selected question to chat content
                chatContent.innerHTML += "<div>User: " + selectedQuestion + "</div>";

                // Respond based on selected question
                var response = getResponse(selectedQuestion);
                chatContent.innerHTML += "<div>Chat-ai: " + response + "</div>";

                // Clear selected question
                document.getElementById("questionSelect").selectedIndex = 0;

                // Scroll chat content to bottom
                chatContent.scrollTop = chatContent.scrollHeight;
            }

            function getResponse(selectedQuestion) {
                // Define predefined questions and their corresponding answers
                var predefinedQuestions = {
                    "What is the current time?": "The current time is " + getCurrentTime() + " IST.",
                    "What day is it today?": "Today is " + getCurrentDay() + ".",
                    "What is your name?": "My name is Chat-AI.",
                    "How are you feeling today?": "I'm feeling awesome!",
                    "Where are RIL plants located in India?": "RIL plants are located in various places: Allahabad, Barabanki, Dahej, Hazira, Hoshiarpur, Jamnagar, Nagothane, Nagpur, Naroda, Patalganga, Silvassa and Vadodara.",
                    "Who is the founder?": "The founder of RIL is Dhirubhai Ambani.",
                    "Which is the largest refinery of Reliance?": "Jamnagar Refinery is the largest oil refinery in the world. ",
                    "Who is CEO of Reliance?": "Mukesh D. Ambani"
                };

                // Check if selectedQuestion matches any predefined question
                if (predefinedQuestions.hasOwnProperty(selectedQuestion)) {
                    return predefinedQuestions[selectedQuestion];
                } else {
                    return "Sorry, I don't understand that question.";
                }
            }

            function getCurrentTime() {
                var currentDate = new Date();
                var options = { timeZone: "Asia/Kolkata", hour12: true, hour: 'numeric', minute: 'numeric' };
                return currentDate.toLocaleTimeString('en-US', options);
            }

            function getCurrentDay() {
                var days = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
                var currentDate = new Date();
                var dayIndex = currentDate.getDay();
                return days[dayIndex];
            }
        </script>
    </div>
</body>